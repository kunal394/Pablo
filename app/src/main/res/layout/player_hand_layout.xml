<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/self_hand_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/card1"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        app:srcCompat="@drawable/three_of_clubs" />

    <ImageView
        android:id="@+id/card2"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        android:layout_marginStart="@dimen/cards_overlap_area"
        app:srcCompat="@drawable/four_of_clubs" />

    <ImageView
        android:id="@+id/card3"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        android:layout_marginStart="@dimen/cards_overlap_area"
        app:srcCompat="@drawable/three_of_clubs" />

    <ImageView
        android:id="@+id/card4"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        android:layout_marginStart="@dimen/cards_overlap_area"
        app:srcCompat="@drawable/three_of_clubs" />

    <ImageView
        android:id="@+id/card5"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        android:layout_marginStart="@dimen/cards_overlap_area"
        app:srcCompat="@drawable/three_of_clubs" />

    <ImageView
        android:id="@+id/card6"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        android:layout_marginStart="@dimen/cards_overlap_area"
        app:srcCompat="@drawable/three_of_clubs" />

    <ImageView
        android:id="@+id/card7"
        android:layout_width="@dimen/self_cards_size"
        android:layout_height="@dimen/self_cards_size"
        android:layout_marginStart="@dimen/cards_overlap_area"
        app:srcCompat="@drawable/three_of_clubs" />

</LinearLayout>